<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backend.deliveryweb">
    <insert id = "register" parameterType="com.backend.deliveryweb.vo.Stores">
        INSERT INTO "Stores"(
            "storeid",
            "userid",
            "name",
            "type",
            "category",
            "address",
            "address_detail",
            "storePictureUrl",
            "phone",
            "content",
            "minDeliveryPrice",
            "deliveryTip",
            "minDeliveryTime",
            "maxDeliveryTime",
            "operationHours",
            "closedDays",
            "deliveryAddress",
            "status"
        )
        VALUES (
                   seq_stores.nextval,
                   #{userid},
                   #{name},
                   #{type},
                   #{category},
                   #{address},
                   #{address_detail},
                   #{storePictureUrl},
                   #{phone},
                   #{content},
                   #{minDeliveryPrice},
                   #{deliveryTip},
                   #{minDeliveryTime},
                   #{maxDeliveryTime},
                   #{operationHours},
                   #{closedDays},
                   #{deliveryAddress},
                   #{status}
               )
    </insert>

    <select id ="info" parameterType="string" resultType="map">
        SELECT * FROM "Stores"
        WHERE "userid" = #{userid}
    </select>
</mapper>